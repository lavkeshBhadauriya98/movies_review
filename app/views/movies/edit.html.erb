<style>
form {
  max-width: 400px;
  margin: 0 auto;
}


form div label {
  display: block;
  margin-bottom: 5px;
}

form div input[type="text"],
form div textarea {
  width: 100%;
  padding: 8px;
  margin-bottom: 10px;
  box-sizing: border-box;
}

form div input[type="file"] {
  margin-bottom: 10px;
}

form div input[type="submit"] {
  background-color: #4caf50;
  color: white;
  padding: 10px 15px;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

form div input[type="submit"]:hover {
  background-color: #45a049;
}
</style>	

	<%= form_for @movie do|f| %>
	<div>
		<%= f.label :title %>
		<%= f.text_field :title%>
	</div>

	<div>
	<%= f.label :description %> 
	<%= f.text_area :description %>

	<%= f.label :image %>
	<%= f.file_field :image%>
		</div>

	<div>
		<%=f.submit 'Update Movie'%>
		<div>
		<%end%>