<style>
  body {
  font-family: Arial, sans-serif;
  background-color: #f4f4f4;
  margin: 0;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.log_in {
  margin-bottom: 360px;
  margin-left: 0px;
  text-align: left;
  margin-right: -110px;
  color: #333;
}

.field {
  margin-bottom: 15px;  
}

label {
  font-weight: bold;
}

.field input[type="email"],
.field input[type="password"] {
  width: 100%;
  padding: 8px;
  box-sizing: border-box;
  margin-top: 5px;
  border: 1px solid #ccc;
  border-radius: 4px;
}

.field input[type="checkbox"] {
  margin-right: 5px;
}

.actions {
  text-align: center;
}

.actions input[type="submit"] {
  background-color: #4caf50;
  color: white;
  padding: 10px 20px;
  font-size: 16px;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

.actions input[type="submit"]:hover {
  background-color: #45a049;
}

/* Optional: Style links in the shared/links partial */
.devise-links a {
  color: #3498db;
  text-decoration: none;
}

.devise-links a:hover {
  text-decoration: underline;
}

</style>
<h2 class="log_in">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
